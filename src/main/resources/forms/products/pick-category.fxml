        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" stylesheets="@../../style.css" VBox.vgrow="NEVER">
            <children>
                <Label text="Seleccionar Categoría">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="298.0" prefWidth="544.0">
            <children>
                <TableView fx:id="tblAllCategories" prefHeight="298.0" prefWidth="309.0">
                    <columns>
                        <TableColumn fx:id="colIdAll" prefWidth="90.0" text="Nro." />
                        <TableColumn fx:id="colDescriptionAll" prefWidth="216.0" text="Categoría" />
                    </columns>
                </TableView>
            </children>
            <VBox.margin>
                <Insets left="30.0" />
            </VBox.margin>
        </HBox>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="285.0" minWidth="10.0" prefWidth="285.0" />
