                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </GridPane.margin></Button>
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancelLoad" text="Cancelar" GridPane.halignment="CENTER">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </GridPane.margin></Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>
        </GridPane>
    </children>
