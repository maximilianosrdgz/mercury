                <Button fx:id="btnSelectCategory" mnemonicParsing="false" onAction="#selectCategoryReport" prefHeight="26.0" prefWidth="90.0" text="Seleccionar" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER">
