<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>domain.Category</class>
        <class>domain.Client</class>
        <class>domain.Location</class>
        <class>domain.Material</class>
        <class>domain.MaterialQuantity</class>
        <class>domain.MaterialStock</class>
        <class>domain.Product</class>
        <class>domain.ProductStock</class>
        <class>domain.Province</class>
        <class>domain.Purchase</class>
        <class>domain.PurchaseDetail</class>
        <class>domain.Supplier</class>
        <properties>
            <property name="javax.persistence.jdbc.password" value="imladris"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mercurydb"/>
            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="eclpiselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="INFO"/>
        </properties>
    </persistence-unit>
</persistence>